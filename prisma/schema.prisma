// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

model photo {
  id String @id @default(cuid())

  description String?
  isVisible   Boolean @default(true)

  photoMetadata photo_metadata?
  ratings       photo_ratings?

  albums       album[]
  album_banner album[] @relation("album_banner")
}

model photo_metadata {
  photoId String @id

  height      Int
  width       Int
  contentType String
  createdAt   DateTime @default(now())

  photo photo @relation(fields: [photoId], references: [id])
}

model photo_ratings {
  photoId String @id

  likes Int @default(0)

  photo photo @relation(fields: [photoId], references: [id])
}

model album {
  id String @id @default(cuid())

  name     String?
  createAt DateTime @default(now())
  bannerId String

  photos photo[]
  banner photo   @relation("album_banner", fields: [bannerId], references: [id])
}

model user {
  id String @id @default(cuid())

  name     String
  email    String @unique
  password String

  role Role @default(USER)
}

model profile {
  id Int @id @default(autoincrement())

  photo       String
  description String
}
